<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10sp"
    app:cardElevation="15sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <TextView
            android:id="@+id/errand_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/errand_pick_up_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/errand_title"
            android:layout_marginTop="10dp"
            android:text="@string/pick_up_locale"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/errand_delivery_up_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/errand_pick_up_location"
            android:layout_marginTop="10dp"
            android:text="@string/deliver_locale"
            android:textSize="18sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>