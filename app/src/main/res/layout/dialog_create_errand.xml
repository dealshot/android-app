<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <android.support.design.widget.TextInputEditText
            android:id="@+id/errand_title_input"
            android:hint="@string/errand_name_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <android.support.design.widget.TextInputEditText
            android:id="@+id/errand_description_input"
            android:hint="@string/errand_description_hint"
            android:layout_below="@+id/errand_title_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <android.support.design.widget.TextInputEditText
            android:id="@+id/errand_location_input"
            android:layout_below="@+id/errand_description_input"
            android:hint="@string/errand_location_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <android.support.design.widget.TextInputEditText
            android:id="@+id/errand_dropoff_location_input"
            android:layout_below="@+id/errand_location_input"
            android:hint="@string/errand_dropoff_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <android.support.design.widget.TextInputEditText
            android:id="@+id/errand_time_input"
            android:hint="@string/errand_time_hint"
            android:layout_below="@+id/errand_dropoff_location_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</RelativeLayout>